<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppBuscaCep.Views.Menu"
             Title="Menu">

    <VerticalStackLayout Spacing="10" Padding="10">

        <Image Source="logo_buscacep.png" HeightRequest="230"/>

        <Label HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold" Text="API Busca Cep"/>

        <Button Margin="0, 10, 0 ,0" Grid.Row="0" HeightRequest="50" Grid.Column="0" FontSize="Small" Text="🏙️ Buscar Cep" Clicked="Button_Clicked_buscacep"/>
        <Button Grid.Row="1" HeightRequest="50" Grid.Column="1" FontSize="Small" Text="​🏡​ Buscar Bairro" Clicked="Button_Clicked_buscabairro" />
        <Button Grid.Row="2" HeightRequest="50" Grid.Column="0" FontSize="Small" Text="🛣️​ Buscar Ruas do Bairro" Clicked="Button_Clicked_buscarua"/>
        <Button Grid.Row="3" HeightRequest="50" Grid.Column="0" FontSize="Small" Text="🧭​ Buscar Endereço Pelo Cep" Clicked="Button_Clicked_buscaendereco"/>
    </VerticalStackLayout>

</ContentPage>